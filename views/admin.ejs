<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #79cfe2;
            margin: 0;
            padding: 20px;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .header, .footer {
            background-color: #e16599; 
            color: white;
            padding: 10px 20px;
            text-align: center;
        }
        .header .nav a {
            margin: 0 10px;
            color: white;
            text-decoration: none;
        }
        .header .nav a:hover {
            text-decoration: underline;
        }
        .main-content {
            flex: 1;
            margin: 20px auto;
            width: 80%;
        }
        h1 {
            text-align: center;
            color: #fefffe;
        }
        .data-table {
            margin: 20px 0;
            border-collapse: collapse;
            width: 100%;
        }
        .data-table th, .data-table td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        .data-table th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #e18fe0;
            color: white;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>Community Engagement</h1>
        <div class="nav">
            <a href="/">About</a>
            <a href="/">Inspiration</a>
            <a href="/">Gallery</a>
            <a href="/">Events</a>
        </div>
    </div>
    <div class="main-content">
        <h1>Admin Dashboard</h1>
        <h2>Donations</h2>
        <table class="data-table">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Community</th>
                <th>Donation</th>
                <th>Organisation</th>
            </tr>
            <% donations.forEach(function(donation) { %>
                <tr>
                    <td><%= donation.id %></td>
                    <td><%= donation.name %></td>
                    <td><%= donation.community %></td>
                    <td><%= donation.donation %></td>
                    <td><%= donation.organisation %></td>
                </tr>
            <% }) %>
        </table>

        <h2>Events</h2>
        <table class="data-table">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>Community</th>
                <th>Event</th>
            </tr>
            <% events.forEach(function(event) { %>
                <tr>
                    <td><%= event.id %></td>
                    <td><%= event.name %></td>
                    <td><%= event.gender %></td>
                    <td><%= event.email %></td>
                    <td><%= event.phone %></td>
                    <td><%= event.address %></td>
                    <td><%= event.community %></td>
                    <td><%= event.event %></td>
                </tr>
            <% }) %>
        </table>
    </div>
    <div class="footer">
        <p>&copy; 2024 Community Engagement Platform | <a href="/contact">Contact Us</a></p>
    </div>
</body>
</html>
